<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@id/ChooserFragment"
    android:id="@+id/nav_host_fragment">

    <fragment
        android:id="@+id/ChooserFragment"
        android:name="com.example.firebaselinkedsecurity.ChooserFragment">

        <action
            android:id="@+id/action_emailpassword"
            app:destination="@id/EmailPasswordFragment" />

        <action
            android:id="@+id/action_firebaseui"
            app:destination="@id/FirebaseUIFragment" />

        <action
            android:id="@+id/action_google"
            app:destination="@id/GoogleSignInFragment" />

        <action
            android:id="@+id/action_phoneauth"
            app:destination="@id/PhoneAuthFragment" />
        <action
            android:id="@+id/action_ChooserFragment_to_storeActivity"
            app:destination="@id/storeActivity" />

    </fragment>

    <fragment
        android:id="@+id/EmailPasswordFragment"
        android:name="com.example.firebaselinkedsecurity.EmailPasswordFragment" />

    <fragment
        android:id="@+id/FirebaseUIFragment"
        android:name="com.example.firebaselinkedsecurity.FirebaseUIFragment" />

    <fragment
        android:id="@+id/GoogleSignInFragment"
        android:name="com.example.firebaselinkedsecurity.GoogleSignInFragment" />

    <fragment
        android:id="@+id/PhoneAuthFragment"
        android:name="com.example.firebaselinkedsecurity.PhoneAuthFragment" />
    <activity
        android:id="@+id/storeActivity"
        android:name="com.example.firebaselinkedsecurity.StorageActivity"
        android:label="StorageActivity" />

</navigation>